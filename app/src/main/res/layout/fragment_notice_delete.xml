<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NoticeDeleteFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout9"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewInformBack"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/all_arrow_back_18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:letterSpacing="-0.02"
            android:text="알림"
            android:textColor="#222227"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewInformBack"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutNoticeDeleteSelectAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout9">

        <CheckBox
            android:id="@+id/checkBoxNoticeDeleteSelectAll"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/notice_check_button_selector"
            android:button="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewNoticeDeleteSelectAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:letterSpacing="-0.02"
            android:text="전체 선택"
            android:textAppearance="@style/Typography.Body1.Medium"
            android:textColor="@color/gray4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkBoxNoticeDeleteSelectAll"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewNoticeDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutNoticeDeleteSelectAll"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/buttonNoticeDeleteCancel"
        style="@style/Widget.Material3.Button"
        android:layout_width="153dp"
        android:layout_height="45dp"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#FFFFFF"
        android:letterSpacing="-0.02"
        android:text="취소"
        android:textAppearance="@style/Typography.Bottom1.SemiBold"
        android:textColor="@color/gray5"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/gray3"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/buttonNoticeDeleteSubmit"
        style="@style/Widget.Material3.Button"
        android:layout_width="153dp"
        android:layout_height="45dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/color_notice_delete_button"
        android:enabled="false"
        android:letterSpacing="-0.02"
        android:text="삭제"
        android:textAppearance="@style/Typography.Bottom1.SemiBold"
        android:textColor="#FFFFFF"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonNoticeDeleteCancel" />

</androidx.constraintlayout.widget.ConstraintLayout>