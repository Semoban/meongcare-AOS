<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".ExcretaFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_excreta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="10.04 목"
        app:titleCentered="true"
        app:titleTextColor="#222227" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_excreta">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/textview_excreta_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:text="초코님의 기록"
                android:textAppearance="@style/Typography.SemiBold"
                android:textColor="#222227"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textview_excreta_addbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:text="추가"
                android:textAppearance="@style/Typography.Medium"
                android:textColor="#6A6A6A"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/textview_excreta_name"
                app:layout_constraintEnd_toStartOf="@id/textview_excreta_editbutton"
                app:layout_constraintTop_toTopOf="@id/textview_excreta_name" />

            <TextView
                android:id="@+id/textview_excreta_editbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:clickable="true"
                android:focusable="true"
                android:text="편집"
                android:textAppearance="@style/Typography.Medium"
                android:textColor="#6A6A6A"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/textview_excreta_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/textview_excreta_name" />

            <View
                android:id="@+id/view_excreta_record"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/all_rect_r15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_excreta_name" />

            <TextView
                android:id="@+id/textview_excreta_numberfeces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/all_rect_r5"
                android:backgroundTint="#99FFE8D3"
                android:gravity="center"
                android:padding="8dp"
                android:text="대변 1회"
                android:textAppearance="@style/Typography.Medium"
                android:textColor="#FF7A00"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/view_excreta_record"
                app:layout_constraintTop_toTopOf="@id/view_excreta_record" />

            <TextView
                android:id="@+id/textview_excreta_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/all_rect_r5"
                android:backgroundTint="#99ECF8FF"
                android:gravity="center"
                android:padding="8dp"
                android:text="소변 1회"
                android:textAppearance="@style/Typography.Medium"
                android:textColor="#5AC4FF"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/textview_excreta_numberfeces"
                app:layout_constraintTop_toTopOf="@id/view_excreta_record" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintBottom_toBottomOf="@id/view_excreta_record"
                app:layout_constraintEnd_toEndOf="@id/view_excreta_record"
                app:layout_constraintStart_toStartOf="@id/view_excreta_record"
                app:layout_constraintTop_toBottomOf="@id/textview_excreta_number" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>