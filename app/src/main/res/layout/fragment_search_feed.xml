<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFeedFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_searchfeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/all_arrow_back_20dp" />

    <EditText
        android:id="@+id/edittext_searchfeed_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="29dp"
        android:background="@drawable/all_rect_r10"
        android:backgroundTint="#F4F4F4"
        android:hint="검색어를 입력해주세요"
        android:paddingHorizontal="16dp"
        android:drawableEnd="@drawable/pet_food_search"
        android:paddingVertical="13dp"
        android:textAppearance="@style/Typography.Medium"
        android:textColorHint="#949494"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_searchfeed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/toolbar_searchfeed"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_searchfeed_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittext_searchfeed_search" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_searchfeed_directinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:paddingVertical="12dp"
        android:background="@drawable/all_rect_r5"
        android:layout_marginTop="16dp"
        android:text="직접 입력하기"
        android:backgroundTint="#D9D9D9"
        android:textAppearance="@style/Typography.SemiBold"
        android:textSize="16sp"
        android:textColor="#6A6A6A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_searchfeed_result" />

</androidx.constraintlayout.widget.ConstraintLayout>