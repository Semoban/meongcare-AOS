<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkbox_medicalrecordedit"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/selector_checkbox"
            android:button="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_medicalrecordedit"
            app:layout_constraintBottom_toBottomOf="@id/view_medicalrecordedit" />

        <View
            android:id="@+id/view_medicalrecordedit"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:background="@drawable/all_rect_r5"
            android:backgroundTint="@color/gray2"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkbox_medicalrecordedit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


        <TextView
            android:id="@+id/textview_medicalrecordedit_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:textAppearance="@style/Typography.Body1.Medium"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/view_medicalrecordedit"
            app:layout_constraintStart_toStartOf="@id/view_medicalrecordedit"
            app:layout_constraintEnd_toStartOf="@id/imageview_medicalrecordedit_arrow"
            app:layout_constraintBottom_toBottomOf="@id/view_medicalrecordedit"
            tools:text="08:00 AM" />

        <ImageView
            android:id="@+id/imageview_medicalrecordedit_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:src="@drawable/all_arrow_forward"
            app:layout_constraintTop_toTopOf="@id/view_medicalrecordedit"
            app:layout_constraintBottom_toBottomOf="@id/view_medicalrecordedit"
            app:layout_constraintEnd_toEndOf="@id/view_medicalrecordedit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>