<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_item_supplement_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오전 08:00"
        android:textAppearance="@style/Typography.Body1.Medium"
        android:textColor="@color/gray5"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/view_item_supplement_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="@color/gray3" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_item_supplement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="50dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="17dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:id="@+id/layout_item_supplement_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_item_supplement_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="영양제 이름"
                        android:textAppearance="@style/Typography.Body2.Medium"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textView_item_supplement_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="영양제 섭취량"
                        android:textAppearance="@style/Typography.Body3.Light" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView_item_supplement_check"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp"
                    app:srcCompat="@drawable/all_check_toggle_20dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>