<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview_petshare_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:src="@drawable/all_un_check"
        app:layout_constraintEnd_toEndOf="@id/circleimageview_petshare_image"
        app:layout_constraintTop_toTopOf="@id/circleimageview_petshare_image" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimageview_petshare_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="5dp"
        android:elevation="2dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_petshare_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAppearance="@style/Typography.Body3.Medium"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/circleimageview_petshare_image"
        app:layout_constraintStart_toStartOf="@id/circleimageview_petshare_image"
        app:layout_constraintTop_toBottomOf="@id/circleimageview_petshare_image"
        tools:text="김먼지" />

</androidx.constraintlayout.widget.ConstraintLayout>