<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="8dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_pet"
        android:layout_width="79dp"
        android:layout_height="93dp"
        app:cardBackgroundColor="@color/gray1"
        app:cardCornerRadius="11dp"
        app:cardElevation="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimageview_pet_profile"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:elevation="2dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="@id/cardview_pet"
        app:layout_constraintStart_toStartOf="@id/cardview_pet"
        app:layout_constraintTop_toTopOf="@id/cardview_pet" />

    <TextView
        android:id="@+id/textview_pet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:textAppearance="@style/Typography.Body3.Medium"
        app:layout_constraintBottom_toBottomOf="@id/cardview_pet"
        app:layout_constraintEnd_toEndOf="@id/cardview_pet"
        app:layout_constraintStart_toStartOf="@id/cardview_pet"
        app:layout_constraintTop_toBottomOf="@id/circleimageview_pet_profile"
        tools:text="김먼지" />

</androidx.constraintlayout.widget.ConstraintLayout>