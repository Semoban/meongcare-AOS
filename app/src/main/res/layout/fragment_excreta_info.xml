<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExcretaInfoFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_excretainfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/all_arrow_back_18dp" />

    <ScrollView
        android:id="@+id/scrollview_excretainfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_excretainfo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageview_excretainfo_picture"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginHorizontal="66dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/all_rect_gray2_30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edittext_excretainfo_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/all_rect_r5"
                android:drawableEnd="@drawable/all_calendar"
                android:hint="날짜를 선택해주세요"
                android:paddingVertical="14dp"
                android:paddingStart="17dp"
                android:paddingEnd="16dp"
                android:textAppearance="@style/Typography.Body1.Regular"
                android:textColor="@color/black"
                android:textColorHint="@color/gray4"
                app:layout_constraintEnd_toEndOf="@id/imageview_excretainfo_picture"
                app:layout_constraintStart_toStartOf="@id/imageview_excretainfo_picture"
                app:layout_constraintTop_toBottomOf="@id/imageview_excretainfo_picture" />

            <TextView
                android:id="@+id/textview_excretainfo_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="종류"
                android:textAppearance="@style/Typography.Title3.SemiBold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edittext_excretainfo_date" />

            <ImageButton
                android:id="@+id/imagebutton_excretainfo_urine"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/selector_checkbox"
                app:layout_constraintBottom_toBottomOf="@id/textview_excretainfo_type"
                app:layout_constraintStart_toEndOf="@id/textview_excretainfo_type"
                app:layout_constraintTop_toTopOf="@id/textview_excretainfo_type" />

            <TextView
                android:id="@+id/textview_excretainfo_urine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="소변"
                android:textAppearance="@style/Typography.Body1.Medium"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/imagebutton_excretainfo_urine"
                app:layout_constraintStart_toEndOf="@id/imagebutton_excretainfo_urine"
                app:layout_constraintTop_toTopOf="@id/imagebutton_excretainfo_urine" />

            <ImageButton
                android:id="@+id/imagebutton_excretainfo_feces"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/selector_checkbox"
                app:layout_constraintBottom_toBottomOf="@id/textview_excretainfo_urine"
                app:layout_constraintStart_toEndOf="@id/textview_excretainfo_urine"
                app:layout_constraintTop_toTopOf="@id/textview_excretainfo_urine" />

            <TextView
                android:id="@+id/textview_excretainfo_feces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="대변"
                android:textAppearance="@style/Typography.Body1.Medium"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/imagebutton_excretainfo_feces"
                app:layout_constraintStart_toEndOf="@id/imagebutton_excretainfo_feces"
                app:layout_constraintTop_toTopOf="@id/imagebutton_excretainfo_feces" />

            <TextView
                android:id="@+id/textview_excretainfo_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="시각"
                android:textAppearance="@style/Typography.Title3.SemiBold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/textview_excretainfo_type"
                app:layout_constraintTop_toBottomOf="@id/textview_excretainfo_type" />

            <TimePicker
                android:id="@+id/timepiker_excretainfo_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="8dp"
                android:numbersTextColor="@color/black"
                android:timePickerMode="spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_excretainfo_time" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>