<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".CalendarBottomSheetFragment">

    <ImageView
        android:id="@+id/imageviewCalendarBottomSheetDragHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:src="@drawable/all_bottomsheet_drag_handler"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toTopOf="parent" />

    <com.archit.calendardaterangepicker.customviews.DateRangeCalendarView
        android:id="@+id/calendarCalendarBottomSheet"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        custom:disable_date_color="@color/gray4"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toBottomOf="@+id/imageViewCalendarBottomSheetDragHandler"
        custom:range_color="@color/main1"
        custom:range_date_color="@color/main4"
        custom:selected_date_circle_color="@color/main4"
        custom:selected_date_color="@color/white"
        custom:text_size_date="16sp"
        custom:text_size_title="18sp"
        custom:text_size_week="16sp"
        custom:title_color="@color/black"
        custom:week_color="@color/black" />

    <Button
        android:id="@+id/buttonCalendarBottomSheetSubmit"
        style="@style/Widget.Material3.Button"
        android:layout_width="288dp"
        android:layout_height="44dp"
        android:layout_marginBottom="23dp"
        android:backgroundTint="@color/main4"
        android:letterSpacing="-0.02"
        android:text="완료"
        android:textAppearance="@style/Typography.Bottom1.SemiBold"
        android:textColor="@color/white"
        custom:cornerRadius="5dp"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layout_calendar_dont_know"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        custom:layout_constraintBottom_toTopOf="@+id/buttonCalendarBottomSheetSubmit"
        custom:layout_constraintTop_toBottomOf="@+id/calendarCalendarBottomSheet">

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            custom:dividerColor="@color/gray3" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="20dp"
            android:text="날짜가 기억나지 않아요"
            android:textAppearance="@style/Typography.Body1.Medium"
            android:textColor="@color/gray5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="36dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton_calendar_dont_know"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/calendar_radio_button_selector"
                android:button="@null"
                android:checked="false" />

            <TextView
                android:id="@+id/textView_calendar_dont_know"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="모름"
                android:textAppearance="@style/Typography.Body1.Medium"
                android:textColor="@color/gray4" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>