<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView_item_symptomadd_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/symptomadd_check_circle_grey_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:background="@color/symptom_list_item_main_box"
        android:orientation="horizontal"
        android:padding="15dp">

        <androidx.cardview.widget.CardView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <ImageView
                android:id="@+id/imageView_item_symptomadd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_item_symptomadd_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/pretendard_medium"
                android:text="증상 타이틀"
                android:textColor="@color/symptom_list_main_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_item_symptomadd_subtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/pretendard_regular"
                android:text="증상 내용"
                android:textColor="@color/symptom_list_main_text"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>