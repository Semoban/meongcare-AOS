<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/all_calendar_bottom_sheet"
    android:orientation="vertical"
    tools:context=".CalendarBottomSheetFragment">

    <view
        android:id="@+id/view2"
        class="com.google.android.material.bottomsheet.BottomSheetDragHandleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <com.archit.calendardaterangepicker.customviews.DateRangeCalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendar"
        custom:disable_date_color="#ABABAB"
        custom:range_color="#66FF7A00"
        custom:selected_date_circle_color="#FF7A00"
        custom:title_color="@color/black"/>

</LinearLayout>