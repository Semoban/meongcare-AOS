<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/view_medicalrecord"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:background="@drawable/all_rect_r5"
        android:backgroundTint="@color/gray2"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textview_medicalrecord_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:textAppearance="@style/Typography.Body1.Medium"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/view_medicalrecord"
        app:layout_constraintStart_toStartOf="@id/view_medicalrecord"
        app:layout_constraintEnd_toStartOf="@id/imageview_medicalrecord_arrow"
        app:layout_constraintBottom_toBottomOf="@id/view_medicalrecord"
        tools:text="08:00 AM"/>

    <ImageView
        android:id="@+id/imageview_medicalrecord_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:src="@drawable/all_arrow_forward"
        app:layout_constraintTop_toTopOf="@id/view_medicalrecord"
        app:layout_constraintBottom_toBottomOf="@id/view_medicalrecord"
        app:layout_constraintEnd_toEndOf="@id/view_medicalrecord"/>

</androidx.constraintlayout.widget.ConstraintLayout>