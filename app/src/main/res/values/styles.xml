<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Toggle.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="background">@drawable/selector_bg_toggle_button</item>
        <item name="backgroundTint">@color/color_toggle_button</item>
        <item name="android:textColor">@color/color_text_button</item>
        <item name="strokeColor">@color/color_stroke_toggle_button</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">5dp</item>
        <item name="shapeAppearance">@style/CustomShapeAppearanceModel</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceModel</item>
    </style>

    <style name="CustomShapeAppearanceModel" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="CustomChip" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:layout_width">94dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStrokeColor">@color/color_chip_backgound</item>
        <item name="chipBackgroundColor">@color/color_chip_backgound</item>
        <item name="closeIconVisible">false</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_text_button</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Fab_Bottom_App_Bar" parent="">
        <item name="colorPrimary">#FF7A00</item>
        <item name="colorPrimaryVariant">#FF7A00</item>
        <item name="colorOnPrimary">#FFFFFF</item>
    </style>

    <style name="RoundCornerCalendarDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundCornerCalendarModalStyle</item>
    </style>

    <style name="RoundCornerCalendarModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/all_calendar_bottom_sheet</item>
    </style>

    <style name="RoundCornerPhotoDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundCornerPhotoModalStyle</item>
    </style>

    <style name="RoundCornerPhotoModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/all_photo_bottom_sheet</item>
    </style>

    <style name="RoundCornerBirthdayDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundCornerBirthdayModalStyle</item>
    </style>

    <style name="RoundCornerBirthdayModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/all_photo_bottom_sheet</item>
    </style>

    <style name="DefaultTimePicker" parent="ThemeOverlay.Material3">
        <item name="colorControlNormal">@color/gray2</item>
        <item name ="android:textAppearance">@style/Typography.Body1.Medium</item>
        <item name="android:colorAccent">@color/main4</item>
    </style>

    <style name="DefaultDatePicker" parent="ThemeOverlay.Material3">
        <item name="colorControlNormal">@color/gray2</item>
        <item name ="android:textAppearance">@style/Typography.Body1.Medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHighlight">@color/gray3</item>
        <item name="android:colorAccent">@color/main4</item>
    </style>
</resources>